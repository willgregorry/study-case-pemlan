import javax.swing.*;
import java.awt.*;

public class MainFrame extends JFrame {
    public MainFrame() {
        // Environments
        final Image ICON = new ImageIcon("assets/icon.png").getImage();
        final int SCREEN_WIDTH = 1920;
        final int SCREEN_HEIGHT = 1080;

        // Get image icon in "assets" folder, then set it as the icon
        setIconImage(ICON);

        // Set the title of the application
        setTitle("Boost");

        // Set the configuration of the application
        setResizable(false);
        setExtendedState(MAXIMIZED_BOTH);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setSize(SCREEN_WIDTH, SCREEN_HEIGHT);
        setLocationRelativeTo(null);
        getContentPane().setBackground(new Color(0xFEF3E2));

        // Set the layout of the application
        setLayout(null);

        setVisible(true);
    }
}
